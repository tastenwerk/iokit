@import colors
.dropdown
  position: relative
  &.btn
    padding: 4px 12px 2px 12px
    .icn
      opacity: 0.6
    &:hover
      .icn
        opacity: 0.9
ul.dropdown-menu
  background: INTER_LIGHT_WHITE
  position: absolute
  list-style: none
  top: 22px
  left: 0px
  z-index: 100
  min-width: 135px
  padding: 10px 0 5px
  border-radius: 1px
  border: 1px solid #ddd
  box-shadow: -2px 2px 2px rgba(0, 0, 0, 0.45)
  display: none
  &.right-hand
    left: auto
    right: 0

.dropdown li
  color: #555
  display: block
  padding: 6px 25px
  cursor: pointer
  text-decoration:none
  font-weight: 300
  font-size: 12px

  .icn-checkbox
    margin-right: 5px

.dropdown li:hover
  background: INTER_GREY_HOVER
  color: black
  text-decoration: none