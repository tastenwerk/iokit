inter.modal( <%- JSON.stringify( partial( partialPath, {user: user, currentUser: currentUser, _csrf: _csrf} ) ) %>, {
              title: '<%= t('user.edit_profile') %>',
              completed: function( modal ){
                modal.find('input[type=text]:first').focus();
                modal.find('form').on('submit', function(e){
                  e.preventDefault();
                  var data = $(this).serializeArray();
                  $.ajax({ url: '/users/<%= user._id.toString() %>',
                           data: data,
                           type: 'put',
                           dataType: 'json',
                           success: function( response ){
                              if( response.success )
                                inter.modal('close');
                              inter.notify( response.flash );
                           }
                  });
                });
              }
});