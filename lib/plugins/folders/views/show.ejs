inter.main.html('<%- JSON.stringify( partial ) %>');

$('#folder-<%= folder._id %>').kendoGrid({
  dataSource: {
    type: "json",
    transport: {
      read: inter.host.master+'/documents?parentId=<%= folder._id %>',
    },
    schema: {
      data: 'results',
      model: {
        fields: {
          name: { type: "string" },
          updatedAt: { type: "date" },
          holderPrivileges: { type: "string" },
          fileSize: { type: "number" }
        }
      }
    },
    scrollable: {
      virtual: true
    },
    serverPaging: true,
    serverFiltering: true,
    serverSorting: true,
  },
  height: inter.mainHeight(),
  groupable: true,
  sortable: true,
  pageable: {
    refresh: true,
    pageSizes: true
  },
  columns: [ {
      field: 'name',
      title: $.t('name')
    } , {
      field: "updatedAt",
      width: 180,
      title: $.t('updatedAt'),
      format: "{0:dd.MM.yyyy HH:mm}"
    } , {
      field: "holderPrivileges",
      title: $.t('privileges'),
      width: 80
    } , {
      field: "fileSize",
      title: $.t('fileSize'),
      width: 80
    }
  ]
});