body
  background-color: #eae5e0


#login-content
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  width: 600px
  height: 220px
  margin: auto
  background: #fff
  border: 1px solid #aaa

  #login-messages
    position: absolute
    width: 100%
    top: -40px
    text-align: center
    color: #444

  .content-padding
    padding-top: 20px

  #login-logo
    float: left
    width: 150px
    height: 150px
    padding: 10px
    margin-top: 20px
    margin-right: 30px
    margin-left: 10px

  input[type=text], input[type=password]
    padding: 7px 0
    width: 340px

  a[href='/forgot_password']
    margin-right: 10px
    margin-top: 3px
    opacity: 0.5
    &:hover
      opacity: 1

  label
    color: #777
    font-size: 12px

  button[type=submit]
    margin-right: 38px