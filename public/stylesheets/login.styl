html
  background-color: #333
  font-family: 'OpenSans', sans


#login-content
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  width: 380px
  height: 350px
  margin: auto

  #login-logo
    float: left
    margin-left: 10px
    img
      width: 100px
      height: 100px

  #login-logo-text
    font-size: 30px
    color: #ccc
    margin: 30px 0 0 120px

  form
    margin-top: 25px
    //border: 2px solid #aaa
    background: #fafafa

    .desc
      font-size: 12px

  input[type=text], input[type=password]
    padding: 7px 0
    width: 338px

    &:hover, &:focus
      background: #ffe
      color: #333

  a
    font-size: 12px
  a[href='/forgot_password'], a[href='/login']
    margin-right: 10px
    margin-top: 5px
    opacity: 0.5
    &:hover
      opacity: 1

  label
    color: #777
    font-size: 12px