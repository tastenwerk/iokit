inter.hideSidebar();
var active = $('#inter-sidebar').find('.active');
if( active.length ){
  var img = active.find('img');
  img.attr('src', img.attr('src').replace(/_w/g,'').replace('.svg', '_w.svg'));
  active.removeClass('active').removeClass('sidebar-button-hover');
  $('#active-line').hide();
}

inter.main.load('/preferences', function(){

  // the plus icon
  // adds inputs (for array elements)
  $('table.preferences .icn-plus').on('click', function(){
    var input = $(this).closest('td').find('input:first').clone();
    $(this).prev().prev('input').before( input.after('<i class="icn icn-small icn-minus" />').after( '<br/>' ) );
    $(this).prev().prev('input').val('').focus();
  });

  // the minus icon
  // removes inputs (for array elements)
  $('table.preferences .icn-minus').on('click', function(){
    $(this).prev('input').remove();
    $(this).next('br').remove();
    $(this).remove();
  });

});