html
  background-color: #eee


#login-content
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  width: 600px
  height: 220px
  margin: auto
  background: #f9f9f9
  //border: 1px solid #aaa
  box-shadow: -2px 2px 4px #999


  #login-messages
    position: absolute
    width: 100%
    top: -40px
    text-align: center
    color: #444

  .content-padding
    padding-top: 20px

  #login-logo
    float: left
    width: 150px
    height: 150px
    padding: 10px
    margin-top: 20px
    margin-right: 30px
    margin-left: 10px

  input[type=text], input[type=password]
    padding: 7px 0
    width: 340px

  a
    font-size: 12px
  a[href='/forgot_password']
    margin-right: 10px
    margin-top: 5px
    opacity: 0.5
    &:hover
      opacity: 1

  label
    color: #777
    font-size: 12px